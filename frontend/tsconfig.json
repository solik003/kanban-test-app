{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext", // or "ES2020", "ES2022", etc.
    "moduleResolution": "node",
    "jsx": "react-jsx", // or "react"
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true
  }
}